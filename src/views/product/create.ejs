<%- include('../partials/head') %>

<body>
  <%- include('../partials/header') %>

  <div class="login-box-centrado">
      <div class="login-box">
          <h2>Create Game</h2>
          <form action="/product/create" method="POST" enctype="multipart/form-data">
              <label for="nombre">Name Game</label>
              <input type="text" name="nombre" placeholder="Name Game">
              <% if (locals.errors && errors.nombre) { %>
                <div class="error-message">
                  <h5><%= errors.nombre.msg %></h5>
                </div>
            <% } %>
              
              <label for="precio">Price</label>
              <input type="text" name="precio" placeholder="precio">
              <% if (locals.errors && errors.precio) { %>
                <div class="error-message">
                  <h5><%= errors.precio.msg %></h5>
                </div>
            <% } %>
              
              <label for="descripcion">Descripcion</label>
              <input type="text" name="descripcion" placeholder="Descripcion">
              <% if (locals.errors && errors.descripcion) { %>
                <div class="error-message">
                  <h5><%= errors.descripcion.msg %></h5>
                </div>
            <% } %>
              
              <label for="rating">Rating</label>
              <input type="text" name="rating" placeholder="Rating">
              
              <div class="mb-3">
                <label for="imagenJuego" class="form-label">Imagenes</label>
                <input class="form-control" type="file" id="imagenJuego" name="imagenJuego" multiple>
              </div>

              <div class="mb-3">
                  <label for="categoria_id" class="form-label">Category</label>
                  <select class="form-select" id="categoria_id" name="categoria_id">
                    <% categorias.forEach(function(categoria) { %>
                      <option value="<%= categoria.id %>"><%= categoria.nombre %></option>
                    <% }); %>
                  </select>                                  
              </div>
              
              <input type="submit" value="Enviar">
          </form>
      </div>
  </div>

  <%- include('../partials/footer') %>

  <script src="js/addons/rating.js"></script>
  <script src="https://kit.fontawesome.com/06e87440fe.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>
    
    