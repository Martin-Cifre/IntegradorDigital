<%- include('../partials/head') %>


<header>
    <div>
      <div id="inicio">
        <div>
          <a href="/" class="black-link">
            <img class="imagenInicio" src="/img/LogoGQS.png" alt="logo de imagen">
          </a>
        </div>
        <div class="searchbar">
          <form action="/product/detalle/:id" method="POST">
            <input placeholder='🔍︎' class="searchbar" name="search">
          </form>
        </div>
        <div>
          <a href="/product/carrito" class="black-link">
            <i class="fa-solid fa-cart-arrow-down fa-2xl logos-search" style="color: #ffffff;"></i>
          </a>
          <div class="user-menu-dropdown">
              <i class="fa-solid fa-user fa-2xl logos-search" style="color: #ffffff;"></i>
            <ul class="menu center">
              <li><a href="/register" class="black-link">Register</a></li>
              <li><a href="/login" class="black-link">Login</a></li>
              <li><a href="/perfil" class="black-link">Perfil</a></li>
                <li><a href="/product/create" class="black-link">Crear Producto</a></li>
                <li><a href="http://localhost:5173/" class="black-link">Dashboard</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="opciones">
      <div class="posicion">
        <div class="palabras">TIENDAS</div>
        <div class="palabras">USADOS</div>
        <div class="palabras">DESCUENTOS</div>
        <div class="palabras">ONLINE</div>
      </div>
    </div>
  </header>

    <body>

            <div class="conteiner">
                <div class="productoVenta">
                    <div class="content tituloVenta">
                        <p class="letraTitulos3">
                            <%= juegoEncontrado.nombre %>
                        </p>
                    </div>
                    <div class="tituloVenta2">
                        <div class="rating">
                            <img src="http://martincifre.alwaysdata.net/estrellitas.png">
                            <p class="letraTitulos numeroRating">
                                <%= juegoEncontrado.rating %>
                            </p>
                        </div>
                        <div class="generos">
                            <i class="letraTitulos2">Generos: </i>
                            <i class="letraTitulos2">
                                <p class="card-text">
                                    <%= categoriaEncontrada.categoria.nombre %>
                                </p>
                            </i>
                        </div>
                    </div>
                    <br>

                    <div id="carouselExampleIndicators" class="carousel slide">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                                class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                                aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                                aria-label="Slide 3"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="<%= juegoEncontrado.Imagen[1].url_imagen %>" class="d-block w-100"
                                    alt="<%= juegoEncontrado.nombre %>">
                            </div>
                            <div class="carousel-item">
                                <img src="<%= juegoEncontrado.Imagen[2].url_imagen %>" class="d-block w-100"
                                    alt="<%= juegoEncontrado.nombre %>">
                            </div>
                            <div class="carousel-item">
                                <img src="<%= juegoEncontrado.Imagen[3].url_imagen %>" class="d-block w-100"
                                    alt="<%= juegoEncontrado.nombre %>">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>




                    <div class="textoVenta">
                        <p class="card-text">
                            <%= juegoEncontrado.descripcion %>
                        </p>
                    </div>
                    </p>
                </div>
            </div>

            <div class="center">
                <form action="/cart/agregarCarrito" method="POST">
                    <!-- Puedes incluir campos ocultos para enviar información sobre el juego, como su ID, nombre y precio -->
                    <input type="hidden" name="idProductoJuegos" value="<%= juegoEncontrado.id %>">
                    <input type="hidden" name="nombreJuego" value="<%= juegoEncontrado.nombre %>">
                    <input type="hidden" name="precioJuego" value="<%= juegoEncontrado.precio %>">

                    <div class="paddingboton">
                        <h3 class="letraTitulos">$ <%= juegoEncontrado.precio %> </h3>
                        <button class= "agregarCarrito" type="submit">Agregar al carrito</button>
                        </div>
            </form>

                    <% if (usuarioActual && usuarioActual.rol==='Creador' ) { %>
                        <a href="/product/edit/<%= juegoEncontrado.id %>" class="btn btn-primary">Editar</a>
                        
                        <form action="/product/eliminar/<%= juegoEncontrado.id %>/?_method=DELETE" method="post" enctype="multipart/form-data">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>

                        <% } %>
                        
                    </div>



            <%- include('../partials/footer') %>

                <script src="https://kit.fontawesome.com/06e87440fe.js" crossorigin="anonymous"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
                    crossorigin="anonymous"></script>
                <script src="/public/scripts/cart.js"></script>
                <script src="/public/scripts/button_cart.js"></script>

    </body>

    </html>